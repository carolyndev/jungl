{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components": [
        "components/*"
      ],
      "@features": [
        "features/*"
      ],
      "@pages": [
        "pages/*"
      ]
    },
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "noEmit": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
